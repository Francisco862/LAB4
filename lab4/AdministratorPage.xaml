            <Label Content="Panel administratora" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" Margin="0,10,0,0" Foreground="White" FontSize="24" FontFamily="Arial" Height="40" Grid.Column="1"/>
