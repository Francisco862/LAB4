            <Label Content="Imię" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Margin="41,81,0,0" Foreground="White" FontSize="12" FontFamily="Arial" Height="24" Width="50" Grid.ColumnSpan="2"/>
