            <Label Content="Nazwisko" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Margin="166,81,0,0" Foreground="White" FontSize="12" FontFamily="Arial" Height="24" Width="67" Grid.ColumnSpan="2"/>
